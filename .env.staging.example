# Classify - Staging Environment (template)
# Copy to .env and replace placeholders with real test/sandbox credentials.
# Do NOT commit real secrets.

NODE_ENV=production
PORT=5000
HOST=0.0.0.0
APP_URL=http://localhost
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost
CORS_ORIGIN=*

# Database (Docker compose expects these)
POSTGRES_USER=classify_user
POSTGRES_PASSWORD=replace_with_secure_password
POSTGRES_DB=classify_db
DATABASE_URL=postgresql://classify_user:replace_with_secure_password@db:5432/classify_db

# Security
JWT_SECRET=replace_with_64_char_random_string
SESSION_SECRET=replace_with_64_char_random_string
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=replace_with_strong_admin_password
ADMIN_PANEL_PASSWORD=replace_with_admin_panel_password

# Email (Resend preferred, SMTP fallback)
RESEND_API_KEY=replace_with_resend_api_key
RESEND_FROM=Classify <no-reply@example.com>
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=no-reply@example.com
SMTP_PASSWORD=replace_with_smtp_password
SMTP_FROM="Classify <no-reply@example.com>"

# OTP
OTP_EXPIRY_MINUTES=10
OTP_RATE_LIMIT_PER_HOUR=5

# SMS (provider sandbox/test credentials)
SMS_PROVIDER=twilio
SMS_API_KEY=replace_with_sms_api_key
TWILIO_ACCOUNT_SID=replace_with_twilio_account_sid
TWILIO_AUTH_TOKEN=replace_with_twilio_auth_token
TWILIO_FROM_NUMBER=+10000000000

# Payments (Stripe test keys)
STRIPE_SECRET_KEY=sk_test_replace_this
STRIPE_PUBLISHABLE_KEY=pk_test_replace_this

# Logging
LOG_LEVEL=info
