# .env.example.production - Production template (copy of .env.example)
# Use this file as a starting point for production deployments.
# Copy to .env.production on your server, then replace placeholders with real secrets.

NODE_ENV=production
PORT=5000
HOST=0.0.0.0
APP_URL=https://your-production-domain.com
FRONTEND_URL=https://your-production-domain.com
BACKEND_URL=https://api.your-production-domain.com

DATABASE_URL=postgresql://prod_db_user:prod_db_password@prod-db-host:5432/class_prod
DB_POOL_MIN=2
DB_POOL_MAX=20

JWT_SECRET=replace_with_a_strong_random_value
JWT_EXPIRES_IN=30d
SESSION_SECRET=replace_with_session_secret
ADMIN_EMAIL=admin@your-production-domain.com
ADMIN_PANEL_PASSWORD=replace_with_admin_panel_password

SMTP_HOST=smtp.mail.provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=no-reply@your-production-domain.com
SMTP_PASSWORD=replace_with_smtp_password
SMTP_FROM="Classify <no-reply@your-production-domain.com>"

OTP_EXPIRY_MINUTES=10
OTP_RATE_LIMIT_PER_HOUR=5
TEST_EMAIL=test@your-production-domain.com

SMS_PROVIDER=twilio
SMS_API_KEY=replace_with_sms_api_key
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=replace_with_twilio_auth_token
TWILIO_FROM_NUMBER=+10000000000
CUSTOM_SMS_API_KEY=replace_with_custom_sms_api_key

REDIS_URL=redis://:redis_password@redis-host:6379/0
REDIS_HOST=redis-host
REDIS_PORT=6379

STRIPE_SECRET_KEY=sk_live_replace_this
STRIPE_PUBLISHABLE_KEY=pk_live_replace_this

SENTRY_DSN=
LOG_LEVEL=info

CONTACT_PHONE=+00000000000
CONTACT_EMAIL=contact@your-production-domain.com
CONTACT_ADDRESS="Company production address"
SEO_TITLE=Classify - Parental Control & Education
SEO_DESCRIPTION=Educational parental control platform
SEO_KEYWORDS=parental control,education,kids

FEATURE_STORE=true
PM2_INSTANCES=auto
MAX_FILE_UPLOAD_MB=20

HEALTHCHECK_PATH=/api/health

# After editing, restart PM2 or your process manager and verify health endpoints.